<p id="notice"><%= notice %></p>


<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Фильтр по городам <%= link_to 'Импортировать вакансию', new_vacansy_path, class: "btn btn-xs btn-primary", style: "float:right;" %></div>
  <div class="panel-body">
    <%= form_tag(:vacansies, method: :get) do  %>
      <%= select_tag "area_id", options_from_collection_for_select(Area.all, :id, :name, params[:area_id]),multiple: true  %>
        <br/><br/>
      <%= submit_tag "Применить", class: "btn btn btn-success" %>
    <% end %>
  </div>

  <!-- Table -->
<table class="table">
  <thead>
    <tr>
      <th>Город</th>
      <th>Название</th>
      <th>Опубликованна</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vacansies.each do |vacansy| %>
      <tr>
        <td><%= vacansy.area.name %></td>
        <td><%= link_to vacansy.name, vacansy.alternate_url %></td>
        <td><%= vacansy.published_at.localtime.strftime("%d.%m.%Y")  %></td>
        <td><%= link_to 'Show', vacansy %></td>
        <td><%= link_to 'Edit', edit_vacansy_path(vacansy) %></td>
        <td><%= link_to 'Destroy', vacansy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>


